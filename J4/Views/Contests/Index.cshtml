@model IEnumerable<J4.Models.Contest>

@{
    ViewData["Title"] = "Index";
}
<h2> The Contest</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="col-lg-12">
    <div class="Banner">
        @foreach (var item in Model)
        {
            <img src="@Html.DisplayFor(modelItem => item.Img_contest)" />
            <br />
            <b>@Html.DisplayFor(modelItem => item.Name_contest)</b>
            <br />
            <b>@Html.DisplayFor(modelItem => item.Describle)</b>
            <br />
            <b>@Html.DisplayFor(modelItem => item.CreateBy)</b>
            <a href="@Html.DisplayFor(modelItem => item.Link)">Go to</a>

            <br />
            <tr>
                <a asp-action="Edit" asp-route-id="@item.Id_contest">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_contest">Delete</a>
            </tr>
        }
    </div>
</div>

@model IEnumerable<J4.Models.Announcenment>

@{
    ViewData["Title"] = "Index";
}

<h2>Announcenments</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="col-lg-12">

    @foreach (var item in Model)
    {<div class="AnounInfor">
            <img src="@Html.DisplayFor(modelItem => item.Image_announ)" />
            <h3><b>@Html.DisplayFor(modelItem => item.Tittle_announ)</b></h3>
            <h4><b>@Html.DisplayFor(modelItem => item.Describle_announ)</b></h4>

            <tr>
                <a asp-action="Edit" asp-route-id="@item.Id_announ">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_announ">Delete</a>
            </tr>
        </div>
    }
</div>
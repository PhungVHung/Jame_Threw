                    font-family: "Times New Roman", Times, serif;
                }

                .footer1 h2 {
                    margin: 5px;
                    padding: 5px;
                    border-bottom: 1px solid white;
                }
            /*==========================footer2===========================*/
            .footer2 {
                background-color: #e6e6e6;
                color: black;
            }

